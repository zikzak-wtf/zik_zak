    "add_to_cart": {
      "description": "ðŸ›’ SUPABASE KILLER: Add product to user's shopping cart",
      "inputs": ["user_id", "product_id", "quantity"],
      "operations": [
        {
          "type": "balance",
          "account": "product:{product_id}:existence",
          "condition": "> 0",
          "on_fail": "throw Product not found"
        },
        {
          "type": "balance",
          "account": "product:{product_id}:inventory_quantity",
          "condition": "> 0",
          "on_fail": "throw Out of stock"
        },
        {
          "type": "transfer",
          "from": "system:genesis",
          "to": "cart:{user_id}:{product_id}:quantity",
          "amount": "{quantity}",
          "metadata": {
            "operation": "add_to_cart",
            "user_id": "{user_id}",
            "product_id": "{product_id}",
            "timestamp": "timestamp()"
          }
        }
      ]
    },

    "remove_from_cart": {
      "description": "ðŸ›’ SUPABASE KILLER: Remove product from user's shopping cart",
      "inputs": ["user_id", "product_id"],
      "operations": [
        {
          "type": "transfer",
          "from": "cart:{user_id}:{product_id}:quantity",
          "to": "system:deleted",
          "amount": "balance(cart:{user_id}:{product_id}:quantity)",
          "metadata": {
            "operation": "remove_from_cart",
            "user_id": "{user_id}",
            "product_id": "{product_id}"
          }
        }
      ]
    },

